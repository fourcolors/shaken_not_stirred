    "clean": "rm -rf dist"
  },
  "dependencies": {
    "howler": "^2.2.4"
  },
  "devDependencies": {
    "@types/howler": "^2.2.11",
    "@types/react": "^18.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
