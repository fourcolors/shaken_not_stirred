{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shaken/ui": ["packages/ui/src"],
      "@shaken/ui/*": ["packages/ui/src/*"],
      "@shaken/pixi": ["packages/pixi-components/src"],
      "@shaken/pixi/*": ["packages/pixi-components/src/*"],
      "@shaken/game-logic": ["packages/game-logic/src"],
      "@shaken/hooks": ["packages/hooks/src"],
      "@shaken/types": ["packages/types/src"]
    }
  },
  "exclude": ["node_modules", "dist", "storybook-static"]
}
