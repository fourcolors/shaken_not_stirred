{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Acid Lounge Design System",
  "version": "1.0.0",
  "description": "Design tokens for Shaken Not Stirred - The Viva Lounge",

  "colors": {
    "acid": {
      "primary": "#CCFF00",
      "bright": "#E0FF66",
      "electric": "#9DFF00",
      "dark": "#99CC00"
    },
    "pink": {
      "primary": "#FF10F0",
      "bright": "#FF66FF",
      "electric": "#FF00FF",
      "deep": "#CC0099"
    },
    "purple": {
      "primary": "#9D00FF",
      "glow": "#CC66FF",
      "dark": "#660099"
    },
    "background": {
      "void": "#000000",
      "deep": "#0A0A0F",
      "surface": "#1A1A2E",
      "panel": "#16213E",
      "overlay": "rgba(10, 10, 15, 0.92)"
    },
    "semantic": {
      "success": "#00FF88",
      "successGlow": "#66FFAA",
      "successBg": "rgba(0, 255, 136, 0.15)",
      "error": "#FF3366",
      "errorGlow": "#FF6699",
      "errorBg": "rgba(255, 51, 102, 0.15)",
      "warning": "#FFAA00",
      "warningGlow": "#FFCC66",
      "warningBg": "rgba(255, 170, 0, 0.15)",
      "info": "#00CCFF",
      "infoGlow": "#66DDFF",
      "infoBg": "rgba(0, 204, 255, 0.15)"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#E5E5E5",
      "tertiary": "#999999",
      "disabled": "#555555",
      "inverted": "#000000",
      "neonAcid": "#CCFF00",
      "neonPink": "#FF10F0",
      "neonPurple": "#9D00FF"
    }
  },

  "gradients": {
    "acid": "linear-gradient(135deg, #9DFF00 0%, #CCFF00 100%)",
    "pink": "linear-gradient(135deg, #FF10F0 0%, #FF66FF 100%)",
    "cosmic": "linear-gradient(135deg, #0A0A0F 0%, #16213E 50%, #1A1A2E 100%)",
    "neon": "radial-gradient(circle at 50% 50%, #CCFF00 0%, #FF10F0 50%, #9D00FF 100%)"
  },

  "typography": {
    "fontFamily": {
      "display": "Bebas Neue, Impact, Arial Black, sans-serif",
      "kinetic": "Orbitron, Exo 2, Michroma, monospace",
      "body": "Inter, Roboto, -apple-system, BlinkMacSystemFont, sans-serif",
      "mono": "JetBrains Mono, Fira Code, Courier New, monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.25rem",
      "xl": "1.563rem",
      "2xl": "1.953rem",
      "3xl": "2.441rem",
      "4xl": "3.052rem",
      "5xl": "3.815rem",
      "6xl": "4.768rem",
      "7xl": "5.96rem"
    },
    "fontSizeTv": {
      "base": "1.25rem",
      "lg": "1.75rem",
      "xl": "2.5rem",
      "2xl": "3.5rem",
      "3xl": "5rem",
      "hero": "7rem"
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "black": 900
    },
    "lineHeight": {
      "none": 1,
      "tight": 1.25,
      "snug": 1.375,
      "normal": 1.5,
      "relaxed": 1.625,
      "loose": 2
    },
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em"
    }
  },

  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem",
    "32": "8rem"
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.25rem",
    "base": "0.5rem",
    "md": "0.75rem",
    "lg": "1rem",
    "xl": "1.5rem",
    "2xl": "2rem",
    "3xl": "3rem",
    "full": "9999px",
    "blob": "30% 70% 70% 30% / 30% 30% 70% 70%",
    "liquid": "40% 60% 60% 40% / 60% 40% 60% 40%"
  },

  "shadows": {
    "elevation": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.5)",
      "base": "0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2)",
      "md": "0 10px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.15)",
      "lg": "0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.15)",
      "xl": "0 25px 50px -12px rgba(0, 0, 0, 0.5)",
      "2xl": "0 35px 60px -15px rgba(0, 0, 0, 0.6)"
    },
    "inner": {
      "sm": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.3)",
      "md": "inset 0 4px 8px 0 rgba(0, 0, 0, 0.4)",
      "lg": "inset 0 8px 16px 0 rgba(0, 0, 0, 0.5)"
    },
    "glow": {
      "acid": {
        "sm": "0 0 10px rgba(204, 255, 0, 0.5), 0 0 20px rgba(204, 255, 0, 0.3)",
        "md": "0 0 20px rgba(204, 255, 0, 0.6), 0 0 40px rgba(204, 255, 0, 0.4), 0 0 60px rgba(204, 255, 0, 0.2)",
        "lg": "0 0 30px rgba(204, 255, 0, 0.8), 0 0 60px rgba(204, 255, 0, 0.6), 0 0 90px rgba(204, 255, 0, 0.4)",
        "xl": "0 0 40px rgba(204, 255, 0, 1), 0 0 80px rgba(204, 255, 0, 0.8), 0 0 120px rgba(204, 255, 0, 0.6)"
      },
      "pink": {
        "sm": "0 0 10px rgba(255, 16, 240, 0.5), 0 0 20px rgba(255, 16, 240, 0.3)",
        "md": "0 0 20px rgba(255, 16, 240, 0.6), 0 0 40px rgba(255, 16, 240, 0.4), 0 0 60px rgba(255, 16, 240, 0.2)",
        "lg": "0 0 30px rgba(255, 16, 240, 0.8), 0 0 60px rgba(255, 16, 240, 0.6), 0 0 90px rgba(255, 16, 240, 0.4)",
        "xl": "0 0 40px rgba(255, 16, 240, 1), 0 0 80px rgba(255, 16, 240, 0.8), 0 0 120px rgba(255, 16, 240, 0.6)"
      },
      "purple": {
        "sm": "0 0 10px rgba(157, 0, 255, 0.5), 0 0 20px rgba(157, 0, 255, 0.3)",
        "md": "0 0 20px rgba(157, 0, 255, 0.6), 0 0 40px rgba(157, 0, 255, 0.4), 0 0 60px rgba(157, 0, 255, 0.2)",
        "lg": "0 0 30px rgba(157, 0, 255, 0.8), 0 0 60px rgba(157, 0, 255, 0.6), 0 0 90px rgba(157, 0, 255, 0.4)"
      },
      "white": {
        "sm": "0 0 10px rgba(255, 255, 255, 0.5)",
        "md": "0 0 20px rgba(255, 255, 255, 0.6), 0 0 40px rgba(255, 255, 255, 0.4)",
        "lg": "0 0 30px rgba(255, 255, 255, 0.8), 0 0 60px rgba(255, 255, 255, 0.6)"
      }
    }
  },

  "animation": {
    "easing": {
      "linear": "cubic-bezier(0, 0, 1, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)",
      "liquid": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
      "elastic": "cubic-bezier(0.87, 0, 0.13, 1)",
      "smooth": "cubic-bezier(0.25, 0.46, 0.45, 0.94)"
    },
    "duration": {
      "instant": "50ms",
      "fast": "150ms",
      "base": "300ms",
      "medium": "500ms",
      "slow": "800ms",
      "glacial": "1200ms"
    }
  },

  "zIndex": {
    "base": 0,
    "dropdown": 100,
    "sticky": 200,
    "fixed": 300,
    "modalBackdrop": 400,
    "modal": 500,
    "popover": 600,
    "toast": 700,
    "debug": 9999
  },

  "breakpoints": {
    "xs": "320px",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px",
    "tv": "1920px",
    "4k": "3840px"
  },

  "components": {
    "button": {
      "size": {
        "sm": {
          "height": "2rem",
          "padding": "0.5rem 1rem"
        },
        "md": {
          "height": "2.75rem",
          "padding": "0.75rem 1.5rem"
        },
        "lg": {
          "height": "3.5rem",
          "padding": "1rem 2rem"
        },
        "xl": {
          "height": "4rem",
          "padding": "1.25rem 3rem"
        }
      },
      "variant": {
        "primary": {
          "bg": "#CCFF00",
          "text": "#000000",
          "glow": "0 0 20px rgba(204, 255, 0, 0.6), 0 0 40px rgba(204, 255, 0, 0.4), 0 0 60px rgba(204, 255, 0, 0.2)"
        },
        "secondary": {
          "bg": "#FF10F0",
          "text": "#FFFFFF",
          "glow": "0 0 20px rgba(255, 16, 240, 0.6), 0 0 40px rgba(255, 16, 240, 0.4), 0 0 60px rgba(255, 16, 240, 0.2)"
        },
        "ghost": {
          "bg": "transparent",
          "text": "#FFFFFF",
          "border": "2px solid #CCFF00"
        }
      }
    },
    "avatar": {
      "size": {
        "xs": "2rem",
        "sm": "3rem",
        "md": "4rem",
        "lg": "6rem",
        "xl": "8rem",
        "2xl": "12rem"
      }
    },
    "card": {
      "bg": "#16213E",
      "border": "1px solid rgba(255, 255, 255, 0.1)",
      "radius": "1.5rem",
      "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.15)",
      "padding": "1.5rem"
    },
    "input": {
      "bg": "rgba(255, 255, 255, 0.05)",
      "border": "2px solid rgba(255, 255, 255, 0.2)",
      "borderFocus": "2px solid #CCFF00",
      "height": "3rem",
      "padding": "0.75rem 1rem",
      "radius": "1rem",
      "text": "#FFFFFF",
      "placeholder": "#999999"
    }
  },

  "meta": {
    "googleFonts": [
      "Bebas+Neue",
      "Inter:wght@300;400;500;600;700",
      "Orbitron:wght@400;500;700;900",
      "JetBrains+Mono"
    ],
    "fontLoadUrl": "https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@300;400;500;600;700&family=Orbitron:wght@400;500;700;900&family=JetBrains+Mono&display=swap"
  }
}
